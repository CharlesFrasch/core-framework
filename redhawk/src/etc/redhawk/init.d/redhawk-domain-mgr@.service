[Unit]
Description=Redhawk Domain Manager Template
After=syslog.target
Wants=omniNames.service omniEvents.service
After=omniNames.service omniEvents.service

[Service]
Type=forking
Environment=DOMAIN_NAME=%I
ExecStart=/etc/redhawk/init.d/redhawk-service-start "DOMAIN" "${DOMAIN_NAME}"
ExecStop=/etc/redhawk/init.d/redhawk-service-stop "DOMAIN" "${DOMAIN_NAME}"
TimeoutSec=10s
KillMode=process

[Install]
WantedBy=multi-user.target
